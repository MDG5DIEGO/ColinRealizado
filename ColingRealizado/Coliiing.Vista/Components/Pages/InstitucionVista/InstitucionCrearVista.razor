@page "/institucion/crear"
@inject IInstitucionService servicioIstitucion
@inject NavigationManager nav
@inject SweetAlertService sweetAlertService


<h3>Institucion Crear </h3>

<InstitucionFormulario @ref="instformulario" institucion="institucion" OnValidSubmit="Crear" Cancelar="Navegar"></InstitucionFormulario>

@code {
    private Institucionn institucion = new();
    private InstitucionFormulario? instformulario;

    private async Task Crear()
    {
        institucion.PartitionKey = "Educacion";
        var respuesta = await servicioIstitucion.InsertarInstitucion(institucion);
        if(!respuesta)
        {
            await sweetAlertService.FireAsync("Error", "No se pudo guardar", SweetAlertIcon.Error);
            return;
        }
        Navegar();
    }

    private void Navegar()
    {
        instformulario!.formularioPostOk = true;
        nav.NavigateTo("../instituciones", forceLoad: true);
    }


}
